<html>

<head>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src='/js/bootstrap.min.js'></script>
</head>
<style>

    body#LoginForm{ background-image:url("/images/wallpapers.jpg");  background-size:cover; padding:10px;}

.form-heading { color:#fff; font-size:23px;}
.panel h2{ color:#444444; font-size:25px; margin:0 0 8px 0;}
.panel p { color:#666666; font-size:18px; margin-bottom:30px; line-height:24px;}
.login-form .form-control {
  background: #f7f7f7 ;
  border: 1px solid #d4d4d4;
  border-radius: 7px;
  font-size: 14px;
  height: 50px;
}
.main-div {
  background: #ffffff none repeat scroll 0 0;
  border-radius: 2px;
  margin: 10px auto 30px;
  max-width: 38%;
  padding: 50px 70px 70px 71px;
}

.login-form .form-group {
  margin-bottom:10px;
  padding-left:5px; 
}
.login-form{ text-align:center;}
.forgot a {
  color: #777777;
  font-size: 14px;
  text-decoration: underline;
}
.login-form  .btn.btn-primary {
  background: #f0ad4e none repeat scroll 0 0;
  border-color: #f0ad4e;
  color: #ffffff;
  font-size: 14px;
  width: 100%;
  height: 50px;
  line-height: 50px;
  padding: 0;
}
.forgot {
  text-align: left; margin-bottom:30px;
}
.botto-text {
  color: #ffffff;
  font-size: 14px;
  margin: auto;
}
.login-form .btn.btn-primary.reset {
  background: #ff9900 none repeat scroll 0 0;
}
.back { text-align: left; margin-top:10px;}
.back a {color: #444444; font-size: 13px;text-decoration: none;}
#danger {
    display:none;
}
  </style>

<body id="LoginForm">
    <div class="container">
        <h1 class="form-heading">
            <%= user_option %>'s Login</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel" id='panel'>
                    <h2>Admin Login</h2>
                    <p>Please enter your ID and password</p>
                    <% if(!check_login){ %>
                    <div class="alert alert-danger" role="alert">
                        Login fail,Please check your password!!
                    </div>
                    <% } %>
                </div>
                <form id="login" action='/<%= user_option %>_login' method='post'>
                    <div class="form-group">
                        <input type="tel" class="form-control" name='ID' id="ID" placeholder="<%= user_option %> ID" required
                            autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name='password' id="password" placeholder="Password"
                            required autofocus>
                    </div>
                    <!-- <div class="forgot">
                        <a href="reset.html">Forgot password?</a>
                    </div> -->
                    <button type="submit" class="btn btn-primary">Login</button>
                    <div class='register'>
                        <a href="/<%= user_option %>_register">Don't have an account?</a>
                    </div>
                </form>
            </div>
            <p class="botto-text">Thank you for using our system</p>
        </div>
    </div>


</body>
<script>
    window.onload() = function () {
        setInputFilter(document.getElementById("ID"), function (value) {
            return /^\d*$/.test(value) && (value === "" || parseInt(value) <= 1500);
        });
    }
</script>

</html>