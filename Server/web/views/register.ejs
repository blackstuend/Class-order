<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
        integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;">

    <title>Register Form</title>
</head>
<style>
    body {
        background-image: url("./images/wallpapers.jpg");
        background-size: cover;
        padding: 10px;
    }

    
  
  @media screen and (min-width: 1020px) {
    .container {
        margin-top: 5%;
        margin-left: 30%;
        width: 60%;
        /* border: black 1px solid; */
    }
    .field-label-responsive {
            padding-top: .2rem;
            text-align: right;
        }
    .card {
        background-color: #eeeeee;
        width: 60%;

    }

    
  }
  @media screen and (max-width: 780px) {
    .container {
        margin: 13% 0 25% 2%;
        
        width: 100%;
        /* border: black 1px solid; */
    }
    .card{
        width:300px;
        padding: 0 15px 0 15px
    }
  }
</style>

<body>
    <div class="container">
        <div class="card">
            <form role="form" method="POST" id='form' action="/<%= user_option%>_register">
                <div class="row " style="padding-top:10px;">
                    <div class="col-md-4"></div>
                    <div class="col-md-6">
                        <h2>Register New User</h2>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-3 field-label-responsive">
                        <label for="name">Name</label>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                                <input type="text" name="name" class="form-control" id="name" placeholder="蔡承寰" required
                                    autofocus>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-control-feedback">
                            <span class="text-danger align-middle" id=danger_text>
                                <!-- Put name validation error messages here -->
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 field-label-responsive">
                        <label for="ID">
                            <%= user_option %> ID</label>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon" style="width: 2.6rem"><i
                                        class="fa fa-graduation-cap"></i></div>
                                <input type="text" name="ID" class="form-control" id="ID" placeholder="110510517"
                                    required autofocus>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-control-feedback">
                            <span class="text-danger align-middle">
                                <!-- Put e-mail validation error messages here -->
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 field-label-responsive">
                        <label for="password">Password</label>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group has-danger">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                                <input type="password" name="password" class="form-control" id="password"
                                    placeholder="Password" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-control-feedback">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 field-label-responsive">
                        <label for="password">Confirm Password</label>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon" style="width: 2.6rem">
                                    <i class="fa fa-repeat"></i>
                                </div>
                                <input type="password" class="form-control" id="password-confirm" placeholder="Password"
                                    required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-success offset-md-4" style="margin-bottom:25px"><i
                                class="fa fa-user-plus"></i>
                            Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        //declare
        const pas = document.querySelector('#password')
        const confirm_pas = document.querySelector('#password-confirm')
        const form = document.querySelector('#form')
        const danger_text = document.querySelector('#danger_text')
        const ID = document.querySelector('#ID')
        //start load
        window.addEventListener("load", function (event) {
            form.onsubmit = function () {
                var flag = true;
                if (pas.value != confirm_pas.value) {
                    danger_text.innerText = 'Please confirm your password'
                    return false
                }
                // postData('student_find', { ID: ID.value })
                //     .then(data => false) // JSON from `response.json()` call
                //     .catch(error => false)
                $.ajax({
                    type: 'post',
                    async: false,  // 設定同步方式
                    cache: false,
                    url: '<%= user_option %>_find',
                    data: `ID=${ID.value}`,
                    success: function (res) {
                        if (res)
                            flag = true
                        else
                            flag = false
                    }
                });
                if (!flag) {
                    danger_text.innerText = 'ID have exist'
                    return false
                }
            }
        })
    </script>

</body>